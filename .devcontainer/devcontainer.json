{
    "name": "RStudio",
    "image": "ghcr.io/rocker-org/devcontainer/tidyverse:4.2",
    "overrideCommand": false,
    "appPort": [6080, 8787],
    "forwardPorts": [6080, 8787],
    "portsAttributes": {
        "6080": {
          "label": "desktop"
        },
        "8787": {
          "label": "rstudio"
        }
      },
    "containerEnv": { "DISABLE_AUTH": "true" },
    "features": { "./gcsfuse": {}, "ghcr.io/devcontainers/features/desktop-lite:1": {} },
    "runArgs": [
        "--device=/dev/fuse",
    ],
    "postStartCommand": "/bin/bash ./post-startup.sh"
}
