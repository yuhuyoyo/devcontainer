{
  "name": "Shiny",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "VARIANT": "4",
      "BASE_IMAGE": "rocker/shiny"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "appPort": [
    "3838:3838"
  ],
  "runArgs": [
    "--name=application-server",
    "--network=app-network"
  ],
  "overrideCommand": false,
  "remoteUser": "shiny"
}
