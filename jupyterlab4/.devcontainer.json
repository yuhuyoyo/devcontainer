{
  "name": "Jupyter app",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "shutdownAction": "none",
  // Open the sub-folder with the source code
  "workspaceFolder": "/workspace/jupyter",
  "postCreateCommand": ["../startupscript/post-startup.sh", "jupyter", "/home/jupyter"],
  "postStartCommand": "sudo -u jupyter wb resource mount",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2.4.1": {},
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/java:1": {}
  },
  "appPort": [
    "8080:8080"
  ],
  "runArgs": [
    "--name=application-server",
    "--network=app-network"
  ],
  "mounts": [{ "source": "..", "target": "/workspace", "type": "volume" }]
  "overrideCommand": false,
  "remoteUser": "root"
}
